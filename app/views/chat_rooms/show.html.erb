<div class=" text-center">
    <div class="box">
        <% if current_user == @chat_room.user  %>
          <div class="pull-right">
            <%= link_to chat_room_path(@chat_room), method: :delete do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
             |
            <%= link_to edit_chat_room_path(@chat_room) do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </div>
        <% end %>
        <div class="box-content">
            <h3 class="tag-title"><%= @chat_room.title %> </h3>
            <small><%= @chat_room.description %></small>
        </div>
        <div>
          <div class="message-wrap">
          <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
            <%= render @chat_room.messages %>
          </div>
          </div>
          <%= form_for @message, url: '#' do |f| %>
            <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
            <br>
            <div class="form-group">
              <%= f.text_area :body, placeholder: 'Write a comment...', class: 'form-control' %>
            </div>
          <% end %>
        </div>

    </div>
</div>
