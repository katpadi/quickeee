<div class=" text-center">
    <div class="box">
        <div class="box-content">
            <h1 class="tag-title"><%= @chat_room.title %> </h1>
            <small><%= @chat_room.description %></small>
        </div>
        <div>
          <div class="message-wrap">
          <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
            <%= render @chat_room.messages %>
          </div>
          </div>
          <%= form_for @message, url: '#' do |f| %>
            <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
            <br>
            <div class="form-group">
              <%= f.text_area :body, placeholder: 'Write a comment...', class: 'form-control' %>
            </div>
          <% end %>
        </div>

    </div>
</div>

